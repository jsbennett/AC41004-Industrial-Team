block content
	div
	ul.nav.nav-tabs
		li.nav-item
			a.nav-link.active(href='#' id='Farm' onClick="Weather();") Weather Summary
		li.nav-item
			a.nav-link(href='#' id='Analysis' onClick="Analysis();") Farm Analysis
		div(id='weather' data-bind=data.farm.weather[1].weatherType style='display:none')
		div(id='season' data-bind=data.farm.weather[1].season style='display:none')
		hr
		.grid-container
			.l1
				p.label Season: 
			.r1
				if data.farm.weather[1].season == 'Autumn'
					img(src='images/seasons/autumn.png')
				else if data.farm.weather[1].season == 'Spring'
					img(src='images/seasons/spring.png')
				else if data.farm.weather[1].season == 'Winter'
					img(src='images/seasons/winter.png')
				else if data.farm.weather[1].season == 'Summer'
					img(src='images/seasons/summer.png')
			.l2
				p.label Weather:
			.r2
				if data.farm.weather[1].weatherType == 'Clear'
					img(src='images/weather/clear.png')
				else if data.farm.weather[1].weatherType == 'Cloudy'
					img(src='images/weather/cloudy.png')
				else if data.farm.weather[1].weatherType == 'Fog'
					img(src='images/weather/fog.png')
				else if data.farm.weather[1].weatherType == 'Lightning'
					img(src='images/weather/lightning.png')
				else if data.farm.weather[1].weatherType == 'Rain'
					img(src='images/weather/rain.png')
				else if data.farm.weather[1].weatherType == 'Snow'
					img(src='images/weather/snow.png')
				else if data.farm.weather[1].weatherType == 'Sunny'
					img(src='images/weather/sunny.png')
				else if data.farm.weather[1].weatherType == 'Cloudy'
					img(src='images/weather/cloudy.png')
			.l3
				p.label Temperature:
			.r3
				p.result #{JSON.stringify(data.farm.weather[0].temperature)}Â°C
			.l4
				p.label Humidity:
			.r4
				p.result #{JSON.stringify(data.farm.weather[0].humidity)}
			.l5
				p.label Wind:
			.r5
				p.result #{JSON.stringify(data.farm.weather[0].windStrength)}
			
