block content
	div
		ul.nav.nav-tabs
			li.nav-item
				a.nav-link(href='#' id='Farm' onClick="Weather();") Weather Summary
			li.nav-item
				a.nav-link(href='#' id='Summary' onClick="Summary();") Crop Summary
			li.nav-item
				a.nav-link.active(href='#' id='weatherAnalysis' onClick="WeatherAnalysis();") Weather Analysis
			li.nav-item
				a.nav-link(href='#' id='cropAnalysis' onClick="CropAnalysis();") Crop Analysis
		div(id='id' data-bind=data.farmID style='display:none')
		div(id='months' data-bind=data.months style='display:none')
		#chart_div

		-var min = 0
		-var max = 11
		-var m = (new Date()).getMonth()
		-var i = 0
		-var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
		each val in data.months
			if val.noData == false
				-max = i
			-i++
		
		-i = 0
		each val in data.months
			if val.noData == false
				-min = i
				-break
			-i++
		.container
			.row
				.col
					p(style="display: inline; padding-right: 5px; padding-left:36px") #{months[min]}
					input#slider.slider(type='range', min=min, max=max, value=m, style="display: inline-block; vertical-align:middle", oninput="showVal(this.value)", onchange="showVal(this.value)")
					p(style="display: inline; padding-left: 5px") #{months[max]}
		hr
		p Click on a button to see weather analysis from that month!
		hr
		- var n = 0;
		- var max = 12;
		div(class="container" id="carousel")
			.row
				while n < max/2
					.col-sm-2(style="padding: 0")
						button.btn(id=n, href='#', onclick='displayAnalysis(this.id);' style="width:100%; height:40px; border: 1px solid white") #{months[n]}
					- n++
			.row
				while n < max
					.col-sm-2(style="padding: 0")
						button.btn(id=n, href='#', onclick='displayAnalysis(this.id);' style="width:100%; height:40px; border: 1px solid white") #{months[n]}
					- n++
		hr
		- n = 0
		while n < max
			div.displayAnalysis(id="display"+n)
				pre
					if data.months[n].noData == true
						p No data avaliable for this month! Get farming!
					else
						ul
							each val in data.months[n].fields
								li= "Average Temperature: " + data.weatherMonths[n].avgTemp
								li= "Average Wind: " + data.weatherMonths[n].avgWind
								li= "Average Humidity: " + data.weatherMonths[n].avgHumidity
								li= "Number of Days Rained: " + data.weatherMonths[n].daysRained	
			- n++ 
		script(src="/javascript/monthButtons.js")
